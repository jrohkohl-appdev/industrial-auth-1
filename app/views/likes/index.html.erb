<p id="notice"><%= notice %></p>

<h1 class = "display-4">Likes</h1>
<h6>My Likes</h6>

<table>
  <thead>
    <tr>
      <th>Fan</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @likes.each do |like| %>
      <% if like.fan == current_user %>
        <tr>
          <td><%= like.fan_id %></td>
          <td><%= like.photo_id %></td>
          <td><%= link_to 'Show', like %></td>
          <td><%= link_to 'Edit', edit_like_path(like) %></td>
          <td><%= link_to 'Destroy', like, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Like', new_like_path %>
